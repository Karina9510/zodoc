@{
    
    var ghissueLink =  Context.String("githubIssueLink");
    var title = Model.WithoutSettings.String(BlogKeys.Title);
    var host = Context.String("Host");
    var relativeLink = Model.String("RelativeFilePath");
    var href = $"{ghissueLink}?title={title}&body=https://{host}/{relativeLink}%0A[Delete this and describe the issue!]";
    
}

<div class="alert alert-warning">Something is wrong? Let us know right <a href="@href"> here <i class="fa fa-github"></i> </a></div>
 